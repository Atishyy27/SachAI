{
  "manifest_version": 3,
  "name": "SachAI: AI Fact-Checker",
  "version": "1.1",
  "description": "Right-click any selected text to fact-check it with your local SachAI agent.",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}